{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": ["dist/**"],
            "env": [
                "PRIVATE_GITHUB_TOKEN",
                "PRIVATE_SENDGRID_API_KEY",
                "TURSO_CONNECTION_URL",
                "TURSO_AUTH_TOKEN",
                "PUBLIC_POSTHOG_API_KEY",
                "PUBLIC_POSTHOG_HOST",
                "PUBLIC_PLAUSIBLE_SCRIPT_URL",
                "GITHUB_CLIENT_ID",
                "GITHUB_CLIENT_SECRET",
                "OPENAI_API_KEY",
                "R2_ACCOUNT_ID",
                "R2_ACCESS_KEY_ID",
                "R2_SECRET_ACCESS_KEY",
                "R2_TOKEN",
                "R2_BUCKET_NAME",
                "GITHUB_USERNAME"
            ]
        },
        "check": {
            "dependsOn": ["^check"]
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "env": [
                "PRIVATE_GITHUB_TOKEN",
                "PRIVATE_SENDGRID_API_KEY",
                "TURSO_CONNECTION_URL",
                "TURSO_AUTH_TOKEN",
                "PUBLIC_POSTHOG_API_KEY",
                "PUBLIC_POSTHOG_HOST",
                "PUBLIC_PLAUSIBLE_SCRIPT_URL",
                "GITHUB_CLIENT_ID",
                "GITHUB_CLIENT_SECRET",
                "OPENAI_API_KEY",
                "R2_ACCOUNT_ID",
                "R2_ACCESS_KEY_ID",
                "R2_SECRET_ACCESS_KEY",
                "R2_TOKEN",
                "R2_BUCKET_NAME",
                "GITHUB_USERNAME"
            ]
        }
    }
}
