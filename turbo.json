{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": ["dist/**"],
            "env": [
                "PRIVATE_GITHUB_TOKEN",
                "PRIVATE_MAILJET_API_KEY",
                "PRIVATE_MAILJET_SECRET_KEY",
                "TURSO_CONNECTION_URL",
                "TURSO_AUTH_TOKEN",
                "PUBLIC_POSTHOG_API_KEY",
                "PUBLIC_POSTHOG_HOST",
                "PUBLIC_PLAUSIBLE_SCRIPT_URL",
                "GITHUB_CLIENT_ID",
                "GITHUB_CLIENT_SECRET",
                "GITHUB_USERNAME"
            ]
        },
        "check": {
            "dependsOn": ["^check"]
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "env": [
                "PRIVATE_GITHUB_TOKEN",
                "PRIVATE_MAILJET_API_KEY",
                "PRIVATE_MAILJET_SECRET_KEY",
                "TURSO_CONNECTION_URL",
                "TURSO_AUTH_TOKEN",
                "PUBLIC_POSTHOG_API_KEY",
                "PUBLIC_POSTHOG_HOST",
                "PUBLIC_PLAUSIBLE_SCRIPT_URL",
                "GITHUB_CLIENT_ID",
                "GITHUB_CLIENT_SECRET",
                "GITHUB_USERNAME"
            ]
        }
    }
}
